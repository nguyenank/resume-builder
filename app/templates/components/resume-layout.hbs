<div class="resume">
  <div class="section header">
    <h1 class="name">{{resume.header.name}}</h1>
    <!--
            <div>{{resume.header.phone}} ‚óè {{resume.header.email}} </div>
          -->
    <div class="contactinfo">

      <div class="contactinfo__left">
        <div>{{resume.header.phone}}</div>
      </div>
      <div class="contactinfo__center">
        <div>{{resume.header.email}}</div>
      </div>
      <div class="contactinfo__right">
        {{#each resume.header.links as |link|}}
          {{markdown-to-html link}}
        {{/each}}
      </div>

    </div>
  </div>

  <div class="section">
    <h3 class="section__title">Education</h3>
    <div class="columns">
      <div class="columns__left">
        <div><strong>{{resume.education.school}}</strong></div>
        <div>{{resume.education.degree}}</div>
      </div>
      <div class="columns__right">
        <div><strong>{{resume.education.location}}</strong></div>
        <div>{{resume.education.graduationDate}}</div>
      </div>
    </div>
    <br />
    <div><strong>Selected Coursework:</strong> {{resume.education.coursework}}</div>
    <ul class="list">
        <li class="list__item"><strong>In Progress:</strong> {{resume.education.inprogress}}</li>
    </ul>
</div>

<div class="section">
  <h3 class="section__title">Awards</h3>
<ul class="list">
  {{#each resume.awards as |detail|}}
    <li class="list__item">{{markdown-to-html detail}}</li>
  {{/each}}
</ul>
</div>

<div class="section">
  <h3 class="section__title">Skills</h3>
  <div><strong>Proficient:</strong> {{resume.skills.proficient}}</div>
  <div><strong>Experience:</strong> {{resume.skills.experience}} </div>
  <div><strong>Exposure:</strong> {{resume.skills.exposure}}</div>
</div>


  <div class="section">
    <h3 class="section__title">Work/Research Experience</h3>

    {{#each resume.workexperience as |job|}}
      <div class="section__subsection">
        <div class="columns">
          <div class="columns__left">
            <div><strong>{{job.company}}</strong></div>
            <div><em>{{job.title}}</em></div>
          </div>
          <div class="columns__right">
            <div><strong>{{job.location}}</strong></div>
            <div>{{job.date}}</div>
          </div>
        </div>

        <ul class="list">
          {{#each job.details as |detail|}}
            <li class="list__item">{{markdown-to-html detail}}</li>
          {{/each}}
        </ul>
      </div>
    {{/each}}
  </div>

  <div class="section">
    <h3 class="section__title">Leadership/Volunteer Activities</h3>

    {{#each resume.lvexperience as |job|}}
      <div class="section__subsection">
        <div class="columns">
          <div class="columns__left">
            <div><strong>{{job.company}}</strong></div>
            <div><em>{{job.title}}</em></div>
          </div>
          <div class="columns__right">
            <div><strong>{{job.location}}</strong></div>
            <div>{{job.date}}</div>
          </div>
        </div>

        <ul class="list">
          {{#each job.details as |detail|}}
            <li class="list__item">{{markdown-to-html detail}}</li>
          {{/each}}
        </ul>
      </div>
    {{/each}}
  </div>
